@model WebApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal blue", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-3 hidden-md-down"></div>
        <div class="col-lg-6 col-12" style="margin-top: 10px;">
            <h4 class="text-center">Введите данные для логина</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-3 hidden-md-down"></div>
    </div>
    <div class="row">
        <div class="col-lg-3 hidden-md-down"></div>
        <div class="col-lg-6 col-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "control-label", style = "white-space: nowrap;" })
                <div>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-lg-3 hidden-md-down"></div>
    </div>
    <div class="row">
        <div class="col-lg-3 hidden-md-down"></div>
        <div class="col-lg-6 col-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label", style = "white-space: nowrap;" })
                <div>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-lg-3 hidden-md-down"></div>
    </div>
    <div class="row">
        <div class="col-lg-3 hidden-md-down"></div>
        <div class="col-lg-6 col-12">
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label", style = "white-space: nowrap;" })
                <div>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-lg-3 hidden-md-down"></div>
    </div>
    <div class="row">
        <div class="col-lg-3 hidden-md-down"></div>
        <div class="col-lg-6 col-12" style="margin-top: 10px;">
            <h4 class="text-center">Введите данные игрока</h4>
        </div>
        <div class="col-lg-3 hidden-md-down"></div>
    </div>
    <div class="row">
        <div class="col-lg-3 hidden-md-down"></div>
        <div class="col-lg-6 col-12">
            <div class="form-group">
                @Html.LabelFor(m => m.PlayerName, new { @class = "control-label", style = "white-space: nowrap;" })
                <div>
                    @Html.TextBoxFor(m => m.PlayerName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PlayerName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-lg-3 hidden-md-down"></div>
    </div>
    <div class="row">
        <div class="col-lg-3 hidden-md-down"></div>
        <div class="col-lg-6 col-12">
            <div class="form-group">
                @Html.LabelFor(m => m.PlayerAge, new { @class = "control-label", style = "white-space: nowrap;" })
                <div>
                    @Html.TextBoxFor(m => m.PlayerAge, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PlayerAge, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-lg-3 hidden-md-down"></div>
    </div>
    <div class="row">
        <div class="col-lg-3 hidden-md-down"></div>
        <div class="col-lg-6 col-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Info, new { @class = "control-label", style = "white-space: nowrap;" })
                <div>
                    @Html.TextBoxFor(m => m.Info, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Info, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-lg-3 hidden-md-down"></div>
    </div>
    <div class="row">
        <div class="col-lg-3 hidden-md-down"></div>
        <div class="col-lg-6 col-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Allergy, new { @class = "control-label", style = "white-space: nowrap;" })
                <div>
                    @Html.TextBoxFor(m => m.Allergy, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Allergy, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-lg-3 hidden-md-down"></div>
    </div>
    <div class="row">
        <div class="col-lg-3 hidden-md-down"></div>
        <div class="col-lg-6 col-12" style="margin-top: 10px;">
            <h4 class="text-center">Введите данные персонажа</h4>
        </div>
        <div class="col-lg-3 hidden-md-down"></div>
    </div>
    <div class="row">
        <div class="col-lg-3 hidden-md-down"></div>
        <div class="col-lg-6 col-12">
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, new { @class = "control-label", style = "white-space: nowrap;" })
                <div>
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-lg-3 hidden-md-down"></div>
    </div>
    <div class="row">
        <div class="col-lg-3 hidden-md-down"></div>
        <div class="col-lg-6 col-12">
            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "control-label", style = "white-space: nowrap;" })
                <div>
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-lg-3 hidden-md-down"></div>
    </div>
    <div class="row">
        <div class="col-lg-3 hidden-md-down"></div>
        <div class="col-lg-6 col-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Sex, new { @class = "control-label" })
                <div>
                    <select id="sex" name="sex" class="form-control">
                        <option value="1" selected="selected">M</option>
                        <option value="0">Ж</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-lg-3 hidden-md-down"></div>
    </div>
    <div class="row">
        <div class="col-lg-3 hidden-md-down"></div>
        <div class="col-lg-6 col-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Age, new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(m => m.Age, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Age, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-lg-3 hidden-md-down"></div>
    </div>
    <div class="row">
        <div class="col-lg-3 hidden-md-down"></div>
        <div class="col-lg-6 col-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Quenta, new { @class = "control-label" })
                <div>
                    @*@Html.TextBoxFor(m => m.Quenta, new { type = "file" })*@
                    <label class="btn btn-primary" for="Quenta">
                        <input id="Quenta" name="Quenta" type="file" style="display: none;" onchange="javascript: document.getElementById('filename').innerHTML = '&nbsp;&nbsp;' + getFilename();">
                        Загрузить
                    </label>
                    <label id="filename">&nbsp;</label>
                </div>
                @Html.ValidationMessageFor(m => m.Quenta, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-lg-3 hidden-md-down"></div>
    </div>
    <div class="row">
        <div class="col-lg-3 hidden-md-down"></div>
        <div class="col-lg-6 col-12">
            <div class="form-group">
                <div class="col-md-offset-2 text-center" style="border: 2px solid #0098DA; border-radius: 10px; -moz-border-radius: 10px; -webkit-border-radius: 10px;">
                    <input type="submit" value="Зарегистрироваться"style="background-color: transparent; border: 0px solid;  font-family:Hooge; cursor: pointer; width: 100%" class="blue fontsize150" />
                </div>
            </div>
        </div>
        <div class="col-lg-3 hidden-md-down"></div>
    </div>

    <script>
        function getFilename() {
            var path = document.getElementById('Quenta').value;
            if (path) {
                path = path.substring(path.lastIndexOf('\\') + 1);
                path = path.substring(path.lastIndexOf('/') + 1);
            }
            return path;
        }
    </script>






}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
